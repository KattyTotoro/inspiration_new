// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output = "../node_modules/my-prisma/client"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
  pass  String
  pseudo String?
  token  String @unique @default(uuid())
  role  String?
  posts Post[]
  comments Comment[]
}

model Rubric {
  id        Int     @id @default(autoincrement())
  title     String
  title_en  String
  posts Post[]
}

model Post {
  id        Int     @id @default(autoincrement())
  title     String
  title_en  String
  text      String
  preview   String
  img       String
  approved   Boolean @default(false)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  smile     Int @default(0)
  sad       Int @default(0)
  author_id  Int
  rubric_id  Int
  rubric    Rubric  @relation(fields: [rubric_id], references: [id])
  author    User    @relation(fields: [author_id], references: [id])
}

model Comment {
  id            Int      @id @default(autoincrement())
  text          String
  author_id     Int
  comment_id    Int?
  comments_num  Int       @default(0)
  post_id       Int
  created_at    DateTime  @default(now())
  updated_at    DateTime  @updatedAt
  author        User      @relation(fields: [author_id], references: [id])
}